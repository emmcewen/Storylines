<div class="row mt-4">
  <div class="col-md-6">
    <h3>Begin telling a story and once you are done, hit the submit button to share it with other collaborators.</h3>

  <article class="media">
  <figure class="media-left"></figure>
  <div class="media-content">
    <div class="field">
      <p class="control">
        <textarea class="textarea" placeholder="Add to the storyline..."></textarea>
      </p>
       <p>Character limit 1500</p>
    </div>
    <div class="field">
      <p class="control">
        <button class="button">Submit</button>
      </p>
    </div>
  </div>
</article>

{{!-- This is where the ongoing story comments will appear
HTML --}}
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <a href="{{post.url}}" class="lead">{{post.title}}</a>
    {{post.date}}
    <form action="/posts/{{post._id}}/comments" method="post">
      <textarea class='form-control' name="content" placeholder="Comment"></textarea>
      <p>Character limit 1500</p>
      <div class="text-right">
        <button type="submit" class="btn btn-primary">Continue Story</button>
      </div>
    </form>
  </div>
</div>